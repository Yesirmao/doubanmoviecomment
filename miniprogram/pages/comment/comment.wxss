/* pages/comment/comment.wxss */
/* 电影的背景图片，虚化效果 */
.detail-container {
  height: 400rpx;
  filter: blur(40rpx);/*模糊滤镜*/
  opacity: .9; /*透明度*/
}
/* 电影背景遮罩层，显示电影背景的底层 */
.detail-mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  background: #333;
  top: 0;
  left: 0;
  z-index: -1;  /*显示在底层*/
}
/* 电影的详细信息 */
.detail-info {
  position: absolute;
  display: flex;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;  /*高度与遮罩层一致*/
  padding: 20rpx;
}
/* 右侧大图 */
.detail-img {
  width: 280rpx;        /*大图宽度*/
  height: 90%;          /*da大图高度*/
  margin-right: 24rpx; /*与右侧文字间的间距*/
}
/* 右侧区域 */
.detail {
  flex-grow: 1; /*文字占满剩余的空间*/
  line-height: 54rpx;
  color: #fff;  /*文字的颜色*/
  font-size: 24rpx; /*字体大小*/
}
/* 评分的样式 */
.detail-sc {
  color: #fc0;
  font-size: 36rpx;
}
/* 电影的描述 */
.desc {
  padding: 20rpx;
  font-size: 24rpx;
  color: #555;
}
/*预览图片*/
.comment-img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
/* 评论预览区 */
.comm {
  border-bottom: 1px dotted #ccc;
}
